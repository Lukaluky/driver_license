{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "orderservice-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "swagger-route": {
        "ClusterId": "orderservice-cluster",
        "Match": {
          "Path": "/swagger/{**catch-all}"
        }
      },
      "hangfire-route": {
        "ClusterId": "orderservice-cluster",
        "Match": {
          "Path": "/hangfire/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "orderservice-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://orderservice-api:5050"
          }
        }
      }
    }
  }
}
